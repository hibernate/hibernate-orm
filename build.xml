		</replace>
		<replace file="${dir.dist}/build.xml">
			<replacetoken><![CDATA[name="dir.jdbc" value="jdbc"]]></replacetoken>
			<replacevalue><![CDATA[name="dir.jdbc" value="lib"]]></replacevalue>
