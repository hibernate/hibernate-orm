		<gzip src="${dir.dist}/${fullname}.tar" zipfile="${dir.dist}/${fullname}.tar.gz"/>
        <checksum file="${dir.dist}/${fullname}.tar.gz" algorithm="MD5" fileext=".md5.txt"/>

        <delete file="${dir.dist}/${fullname}.tar"/>
        <delete file="${dir.dist}/build.xml"/>
