            <tarfileset prefix="${name}-${version.major_minor}/eg" dir="${dir.eg}"/>
			<tarfileset prefix="${name}-${version.major_minor}/etc" dir="${dir.etc}"/>
			<tarfileset prefix="${name}-${version.major_minor}/grammar" dir="${dir.grammar}"/>
