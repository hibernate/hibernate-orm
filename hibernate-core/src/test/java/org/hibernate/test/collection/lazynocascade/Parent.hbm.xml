<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.hibernate.test.collection.lazynocascade">
    <class name="Parent">
        <id name="id" column="parent_id">
            <generator class="increment"/>
        </id>
        <set name="children" cascade="all">
            <key column="parent_id"/>
            <one-to-many class="BaseChild"/>
        </set>
    </class>

    <class name="BaseChild" >
        <id name="id" column="base_child_id">
            <generator class="increment"/>
        </id>
        <discriminator/>
        <many-to-one name="dependency" column="dependency_id" class="BaseChild" lazy="proxy"/>
        <subclass name="Child">
            <property name="name" column="name" type="string"/>
        </subclass>
    </class>
</hibernate-mapping>
