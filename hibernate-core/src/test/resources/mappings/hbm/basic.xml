<hibernate-mapping
        xmlns="http://www.hibernate.org/xsd/orm/hbm"
        catalog="the_catalog"
        schema="the_schema"
        default-access="field"
        default-cascade="all"
        auto-import="false"
        default-lazy="false"
        package="org.hibernate.orm.test.boot.jaxb.hbm">
    <class name="BasicEntity" >
        <id name="id" column="pk" type="integer"/>
        <property name="name" />
        <component name="composition">
            <property name="part1"/>
            <property name="part2"/>
        </component>
        <many-to-one name="another"/>
        <bag name="others">
            <key/>
            <one-to-many/>
        </bag>
    </class>
</hibernate-mapping>