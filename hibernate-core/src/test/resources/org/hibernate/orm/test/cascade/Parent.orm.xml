<entity-mappings xmlns="http://www.hibernate.org/xsd/orm/mapping" version="7.0">
    <package>org.hibernate.orm.test.cascade</package>

    <entity class="Parent">
        <table name="Parent"/>
        <attributes>
            <id name="id">
                <column name="id"/>
                <generated-value generator="increment"/>
                <type value="Long"/>
            </id>
            <one-to-many name="children" target-entity="Child" mapped-by="parent">
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-many>
            <one-to-many name="deleteOrphanChildren" target-entity="DeleteOrphanChild" mapped-by="parent" orphan-removal="true">
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-many>
        </attributes>
    </entity>

</entity-mappings>