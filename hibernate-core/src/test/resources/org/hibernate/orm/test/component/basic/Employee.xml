<entity-mappings xmlns="http://www.hibernate.org/xsd/orm/mapping"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 version="7.0">
    <package>org.hibernate.orm.test.component.basic</package>

    <entity class="Employee">
        <table name="t_employees"/>
        <attributes>
            <id name="id">
                <generated-value generator="increment"/>
            </id>
            <basic name="hireDate">
                <column name="hire_date"/>
                <temporal>DATE</temporal>
            </basic>
            <one-to-many name="directReports" orphan-removal="true">
                <join-column name="manager_fk"/>
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-many>
            <embedded name="person"/>
            <embedded name="optionalComponent"/>
        </attributes>
    </entity>

    <embeddable class="OptionalComponent">
        <attributes>
            <basic name="value1" optional="true"/>
            <basic name="value2" optional="true"/>
        </attributes>
    </embeddable>

    <embeddable class="Person">
        <attributes>
            <basic name="name">
                <column updatable="false" nullable="false"/>
            </basic>
            <basic name="dob">
                <column updatable="false" nullable="false"/>
            </basic>
            <basic name="address"/>
            <basic name="previousAddress">
                <column insertable="false"/>
            </basic>
            <basic name="yob"/>
            <basic name="heightInches"/>
            <basic name="currentAddress"/>
        </attributes>
    </embeddable>

</entity-mappings>
