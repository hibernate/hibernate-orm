<entity-mappings xmlns="http://www.hibernate.org/xsd/orm/mapping"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 version="7.0">
    <entity name="Superclass" metadata-complete="true">
        <discriminator-value>A</discriminator-value>
        <discriminator-column name="DISC" discriminator-type="STRING"/>
        <attributes>
            <id name="id">
                <generated-value generator="increment"/>
                <target>Integer</target>
            </id>
            <basic name="dataA">
                <target>String</target>
            </basic>
        </attributes>
    </entity>

    <entity name="Subclass" metadata-complete="true">
        <extends>Superclass</extends>
        <discriminator-value>BA</discriminator-value>
        <attributes>
            <basic name="dataB">
                <target>String</target>
            </basic>
        </attributes>
    </entity>
</entity-mappings>

