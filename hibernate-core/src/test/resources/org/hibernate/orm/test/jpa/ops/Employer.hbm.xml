<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!--
  
-->

<hibernate-mapping package="org.hibernate.orm.test.jpa.ops">

    <class name="Employer" polymorphism="explicit">
        <id name="id">
            <generator class="native"/>
        </id>
        <bag name="employees"
             cascade="persist,merge"
             table="EMPLOYER_EMPLOYEE">
            <key column="EMPER_ID"/>
            <many-to-many class="Employee" column="EMPEE_ID"/>
        </bag>
    </class>

    <class name="Employee" polymorphism="explicit">
        <id name="id">
            <generator class="native"/>
        </id>
        <bag name="employers"
             inverse="true"
             cascade="persist,merge"
             table="EMPLOYER_EMPLOYEE">
            <key column="EMPEE_ID"/>
            <many-to-many class="Employer" column="EMPER_ID"/>
        </bag>
    </class>

</hibernate-mapping>

